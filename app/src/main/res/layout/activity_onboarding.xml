<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewmodel"
            type="com.silva.murillo.passowrdgeneratet.ui.OnboardingActivity" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txtOnboardingOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="@string/textOnboardingAppOne"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtOnboardintTwo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="@string/textOnboardingTwo"
            android:textColor="@color/teal_blue"
            android:textSize="20sp"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="@id/txtOnboardingOne"
            app:layout_constraintStart_toStartOf="@id/txtOnboardingOne"
            app:layout_constraintTop_toBottomOf="@+id/txtOnboardingOne" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtOnboardintThree"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="@string/textOnboardingThree"
            android:textColor="@color/teal_blue"
            android:textSize="20sp"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="@id/txtOnboardintTwo"
            app:layout_constraintStart_toStartOf="@id/txtOnboardintTwo"
            app:layout_constraintTop_toBottomOf="@+id/txtOnboardintTwo" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnGo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/teal_blue"
            android:text="@string/btnContinue"
            android:textAllCaps="false"
            app:layout_constraintCircleRadius="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/txtOnboardintThree"
            app:layout_constraintStart_toStartOf="@id/txtOnboardintThree"
            app:layout_constraintTop_toBottomOf="@+id/txtOnboardintThree" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

